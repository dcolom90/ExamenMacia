<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Screen3">


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextEmail4"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:background="@color/white"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:boxCornerRadiusBottomEnd="55dp"
        app:boxCornerRadiusBottomStart="55dp"
        app:boxCornerRadiusTopEnd="55dp"
        app:boxCornerRadiusTopStart="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail5"
        app:layout_constraintVertical_bias="0.0"
         />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextEmail5"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="576dp"
        android:background="@color/white"
        android:hint="Password"
        android:inputType="textPassword"
        app:boxCornerRadiusBottomEnd="55dp"
        app:boxCornerRadiusBottomStart="55dp"
        app:boxCornerRadiusTopEnd="55dp"
        app:boxCornerRadiusTopStart="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
         />

    <Button
        android:id="@+id/button5"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginBottom="288dp"
        android:text="Button"
        android:background="@drawable/normales"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail4" />


</androidx.constraintlayout.widget.ConstraintLayout>

